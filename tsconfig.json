{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["types.d.ts", "tests/**/*.ts", "services/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
